{
  "name": "@bookimg/book-validator",
  "version": "1.0.0",
  "description": "AWS Lambda for validating books with external APIs",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "esbuild src/index.ts --bundle --platform=node --target=node18 --format=esm --outfile=dist/index.js --external:@aws-sdk/* --external:aws-lambda && echo '{\"type\":\"module\"}' > dist/package.json",
    "clean": "rm -rf dist",
    "package": "npm run build && cd dist && zip -r ../book-validator.zip ."
  },
  "dependencies": {
    "@bookimg/shared": "workspace:*",
    "@aws-sdk/client-s3": "^3.879.0",
    "@aws-sdk/client-sns": "^3.879.0"
  },
  "devDependencies": {
    "esbuild": "^0.23.0",
    "typescript": "^5.9.2",
    "@types/node": "^24.3.0",
    "@types/aws-lambda": "^8.10.143"
  }
}