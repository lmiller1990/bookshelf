{
  "name": "bookimg",
  "version": "1.0.0",
  "description": "AI Book Recognition Pipeline - Monorepo",
  "type": "module",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "pnpm --filter '*' run build",
    "build:textract": "pnpm run build -w packages/textract-processor",
    "build:lambda-web": "pnpm run build -w packages/lambda-web-dist",
    "build:frontend": "pnpm run build -w packages/frontend",
    "deploy:textract": "pnpm run build:textract && terraform apply -target=aws_lambda_function.textract_processor",
    "deploy:lambda-web": "pnpm run build:lambda-web && terraform apply -target=aws_lambda_function.web_api",
    "deploy:frontend": "./deploy-frontend.sh",
    "lint": "prettier . --write",
    "test": "pnpm test --workspaces",
    "clean": "rm -rf packages/*/dist && rm -rf dist",
    "dev": "pnpm run build && node packages/cli/dist/index.js"
  },
  "keywords": [
    "aws",
    "textract",
    "bedrock",
    "lambda",
    "monorepo"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "prettier": "3.6.2"
  }
}
