{
  "name": "bookimg",
  "version": "1.0.0",
  "description": "AI Book Recognition Pipeline - Monorepo",
  "type": "module",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "build:textract": "npm run build -w packages/textract-processor",
    "build:lambda-web": "npm run build -w packages/lambda-web-dist",
    "deploy:textract": "npm run build:textract && terraform apply -target=aws_lambda_function.textract_processor",
    "deploy:lambda-web": "npm run build:lambda-web && terraform apply -target=aws_lambda_function.web_api",
    "test": "npm test --workspaces",
    "clean": "rm -rf packages/*/dist && rm -rf dist",
    "dev": "npm run build && node packages/cli/dist/index.js"
  },
  "keywords": ["aws", "textract", "bedrock", "lambda", "monorepo"],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/node": "^24.3.0",
    "typescript": "^5.9.2",
    
    "@aws-sdk/client-bedrock-runtime": "^3.879.0",
    "@aws-sdk/client-s3": "^3.879.0",
    "@aws-sdk/client-sns": "^3.879.0",
    "@aws-sdk/client-textract": "^3.879.0",
    "@aws-sdk/client-sqs": "^3.879.0",
    "@aws-sdk/client-dynamodb": "^3.879.0",
    "@aws-sdk/client-apigatewaymanagementapi": "^3.879.0",
    "@aws-sdk/s3-request-presigner": "^3.879.0"
  },
  "dependencies": {
    "@types/commander": "^2.12.5",
    "commander": "^14.0.0"
  }
}
